{% block content %}
<div id="mapFilter" class="row">
	<div class="span8" style="position: relative;">
		<div class="white-block">
			<h3>Search Innovations</h3>
			<div class="row">
				<div id="csf_wrapper">
					<form id="custom-search-form" class="form-search form-horizontal pull-right" action="/innovation/search" method="get">
					    <div class="input-append">
					        <input type="text" class="search-query" style="width: 490px;" placeholder="Please enter what your are looking forâ€¦">
					        <button type="submit" class="btn"><i class="icon-search"></i></button>
					    </div>
					</form>
				</div>
